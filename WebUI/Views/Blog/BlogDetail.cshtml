    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">
                    <img src="@Model.Blog.BlogImage" alt="" />
                    <h2>@Model.Blog.Baslik</h2>
                    <p>
                        @Model.Blog.Aciklama
                    </p>
                </div>
                @foreach (var yorum in Model.Yorums)
                {
                    <ul class="comment-list">
                        <li>
                            <img src="~/web2/images/avatar.png" class="img-responsive" alt="">
                            <div class="desc">
                                <p><strong>@yorum.KullaniciAdi</strong>:@yorum.Yorumm</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                }

            <div class="content-form">
                <h3>Bir Yorum Yapın</h3>
                <form method="post" action="/Blog/YorumYap">
                    <input type="hidden" name="BlogId" value="@Model.Blog.Id" />
                    <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
                    <input type="text" placeholder="Mail Adresi" name="Mail" required />
                    <textarea placeholder="Yorum" name="Yorumm"></textarea>
                    <input type="submit" value="Gönder" />
                </form>
            </div>
