<body>
    <!---header---->
    <div class="header">
        <div class="container">
            @*<div class="logo">
                <a href="index.html"><img src="images/logo.jpg" title="" /></a>
            </div>*@
            <!---start-top-nav---->
            
            <div class="clearfix"></div>
            <script>
                $("span.menu").click(function () {
                    $(".top-menu ul").slideToggle("slow", function () {
                    });
                });
            </script>
            <!---//End-top-nav---->
        </div>
    </div>
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var blog in Model.Blogs)
                {
                <div class="single-grid">
                    <img src="@blog.BlogImage" alt="" style="margin-bottom:20px" />
                    <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id" style="margin-top:40px">@blog.Baslik</a>
                    <p>
                        @blog.Aciklama
                    </p>
                </div>
                }
                <br />
            </div>

            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>Son Bloglar</h3>
                    <ul>
                        @foreach (var blog in Model.LastBlogs)
                        {
                        <li><a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id">@blog.Baslik</a></li>
                        }
                    </ul>
                </div>
                @*<div class="comments">
                    <h3>Son Yorumlar</h3>
                    <ul>
                        <li><a href="#">Amada Doe </a> on <a href="#">Hello World!</a></li>
